@inject NavigationManager _nm
@using TrackR.BlazorServer.Services
@using TrackR.Models.SQL
@code{
    private string Name { get; set; } = null!;
    [Inject] 
    private BoardService _bs { get; set; } = null!;
    [Parameter]
    public Action ToggleModal { get; set; }

    private async Task HandelCreateBoard()
    {
        Board b = new();
        b.Name = Name;
        await _bs.CreateBoardAsync(b);
        _nm.NavigateTo(_nm.Uri, forceLoad: true);
    }
}
<div id="backdrop" @onclick="ToggleModal"></div>
<section id="modal" >
    <p>Name:</p>
    <input type="text" placeholder="Board Name" @bind="Name" id="modal_input"/>
    <button type="submit" @onclick="() => HandelCreateBoard()" id="modal_submit">Submit</button>
</section>
